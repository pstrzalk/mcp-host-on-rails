<%= form_with url: chat_assistant_path, method: :post, data: { turbo_frame: "messages" } do |form| %>
  <div>
    <%= form.text_area :prompt, rows: 5, cols: 60, placeholder: "How can I help you?", class: 'w-full text-black text-2xl p-4 placeholder:text-gray-700 border-2 border-black' %>
  </div>
  <div class="mt-4">
    <%= form.submit "Send", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold p-4 rounded shadow-md transition duration-300 ease-in-out" %>
  </div>
<% end %>
