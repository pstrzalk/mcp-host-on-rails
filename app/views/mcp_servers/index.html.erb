<!-- Main Container -->
<div class="w-full h-screen flex flex-col bg-chat-bg">

  <!-- Header -->
  <header class="bg-white shadow-sm border-b border-gray-200 px-9 py-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-5">
        <div class="w-12 h-12 gradient-claude rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-lg">M</span>
        </div>
        <h1 class="text-3xl font-semibold text-gray-900">MCP Servers</h1>
        <span class="text-lg text-gray-500">â€¢</span>
        <span class="text-lg text-gray-500"><%= @mcp_servers.size %> servers configured</span>
      </div>
      <div class="flex space-x-3">
        <%= link_to '/mcp_chat/toolbox', class: "px-6 py-3 text-lg font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors" do %>
          <svg class="w-6 h-6 inline mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
          </svg>
          View Tools
        <% end %>
        <%= link_to '/', class: "px-6 py-3 text-lg font-medium text-claude-blue hover:text-blue-700 hover:bg-blue-50 rounded-lg transition-colors" do %>
          <svg class="w-6 h-6 inline mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          Back to Chat
        <% end %>
      </div>
    </div>
  </header>

  <!-- Content Container -->
  <div class="flex-1 overflow-y-auto px-6 py-6">

    <!-- Flash Messages -->
    <% if notice %>
      <div class="bg-green-50 border border-green-200 rounded-lg px-4 py-3 mb-6">
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <p class="text-base text-green-800"><%= notice %></p>
        </div>
      </div>
    <% end %>

    <!-- Page Description -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg px-4 py-3 mb-6">
      <div class="flex items-start space-x-2">
        <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <p class="text-base text-blue-800 font-medium">Server Management</p>
          <p class="text-base text-blue-700 mt-1">Configure MCP (Model Context Protocol) servers that provide tools and capabilities. Each server must use HTTP/HTTPS transport.</p>
        </div>
      </div>
    </div>

    <!-- Add Server Form -->
    <div class="bg-white rounded-lg border border-gray-200 shadow-sm mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Add New Server</h2>
      </div>
      <div class="p-6">
        <%= form_with model: @mcp_server, local: true, class: "space-y-4" do |form| %>
          <% if @mcp_server.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg px-4 py-3">
              <div class="flex items-start space-x-2">
                <svg class="w-5 h-5 text-red-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <p class="text-base text-red-800 font-medium">Please fix the following errors:</p>
                  <ul class="text-sm text-red-700 mt-1 list-disc list-inside">
                    <% @mcp_server.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :name, 
                    placeholder: "e.g., Local Development Server", 
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-claude-blue focus:border-transparent outline-none text-base" %>
            </div>
            <div>
              <%= form.label :url, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.url_field :url, 
                    placeholder: "e.g., http://localhost:3000/mcp", 
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-claude-blue focus:border-transparent outline-none text-base" %>
            </div>
          </div>

          <div class="flex justify-end">
            <%= form.submit "Add Server", 
                  class: "px-6 py-3 bg-claude-blue text-white rounded-lg hover:bg-blue-700 transition-colors text-base font-medium" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Servers List -->
    <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Configured Servers</h2>
      </div>
      
      <% if @mcp_servers.any? %>
        <div class="divide-y divide-gray-200">
          <% @mcp_servers.each do |server| %>
            <div class="px-6 py-4 flex items-center justify-between">
              <div class="flex-1">
                <h3 class="text-base font-medium text-gray-900"><%= server.name %></h3>
                <p class="text-sm text-gray-600 mt-1"><%= server.url %></p>
                <p class="text-xs text-gray-500 mt-1">Added <%= server.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              </div>
              <div class="flex items-center space-x-3">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Active
                </span>
                <%= link_to server, 
                      class: "px-4 py-2 text-sm font-medium text-red-600 hover:text-red-700 hover:bg-red-50 rounded-lg transition-colors",
                      data: { 
                        "turbo-method": "delete",
                        confirm: "Are you sure you want to remove '#{server.name}'? This action cannot be undone." 
                      } do %>
                  <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                  Remove
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="px-6 py-8 text-center">
          <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h6l2 2h6a2 2 0 012 2v4a2 2 0 01-2 2H5z"></path>
          </svg>
          <p class="text-base text-gray-600 mb-2">No servers configured</p>
          <p class="text-sm text-gray-500">Add your first MCP server using the form above. When no servers are configured, the chat works as a regular AI assistant without external tools.</p>
        </div>
      <% end %>
    </div>

  </div>

</div>