<!-- Main Container -->
<div class="w-full h-screen flex flex-col bg-chat-bg">

  <!-- Header -->
  <header class="bg-white shadow-sm border-b border-gray-200 px-9 py-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-5">
        <div class="w-12 h-12 gradient-claude rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-lg">M</span>
        </div>
        <h1 class="text-3xl font-semibold text-gray-900">Available Tools</h1>
        <span class="text-lg text-gray-500">â€¢</span>
        <span class="text-lg text-gray-500"><%= @tools.size %> tools available</span>
      </div>
      <%= link_to '/', class: "px-6 py-3 text-lg font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors" do %>
        <svg class="w-6 h-6 inline mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        Back to Chat
      <% end %>
    </div>
  </header>

  <!-- Tools Container -->
  <div class="flex-1 overflow-y-auto px-6 py-6">

    <!-- Page Description -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg px-4 py-3 mb-6">
      <div class="flex items-start space-x-2">
        <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <p class="text-base text-blue-800 font-medium">Tools Overview</p>
          <p class="text-base text-blue-700 mt-1">These are the external tools available through the Model Context Protocol (MCP). Each tool requires your explicit permission before execution.</p>
        </div>
      </div>
    </div>

    <!-- Tools Grid -->
    <% if @tools.any? %>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

        <% @tools.each_with_index do |tool, index| %>
        <%
          # Infer category and color from tool name
          tool_name = tool.name.to_s.downcase
          category_info = case tool_name
          when /create|write|post|blog|content/
            { name: "Content Creation", color: "green" }
          when /read|get|fetch|file|document/
            { name: "File System", color: "purple" }
          when /analyze|data|report|chart/
            { name: "Data Analysis", color: "blue" }
          when /send|email|notify|message/
            { name: "Communication", color: "red" }
          when /web|http|scrape|url/
            { name: "Web Scraping", color: "orange" }
          when /database|sql|query|db/
            { name: "Database", color: "indigo" }
          when /search|find|lookup/
            { name: "Search", color: "yellow" }
          else
            { name: "Utility", color: "gray" }
          end
        %>

        <!-- Tool Card -->
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
          <div class="p-6">
            <!-- Tool Header -->
            <div class="flex items-start justify-between mb-4">
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= tool.name %></h3>
                <span class="text-sm text-<%= category_info[:color] %>-600 bg-<%= category_info[:color] %>-100 px-2 py-1 rounded-full"><%= category_info[:name] %></span>
              </div>
            </div>

            <!-- Description -->
            <div class="text-gray-600 text-base mb-4">
              <%= simple_format tool.description %>
            </div>

            <!-- Input Schema / Parameters -->
            <div class="border border-gray-200 rounded-lg p-3 bg-gray-50">
              <h4 class="text-sm font-semibold text-gray-700 mb-2">Tool Information:</h4>

              <% if tool.respond_to?(:input_schema) && tool.input_schema.present? %>
                <!-- If we have input schema, show it -->
                <% begin %>
                  <% schema = tool.input_schema.is_a?(String) ? JSON.parse(tool.input_schema) : tool.input_schema %>
                  <% if schema.is_a?(Hash) && schema["properties"] %>
                    <div class="space-y-2 mb-3">
                      <p class="text-sm text-gray-600 mb-2">Parameters:</p>
                      <% schema["properties"].each do |param_name, param_info| %>
                        <div class="flex items-center justify-between">
                          <span class="text-sm font-medium text-gray-900"><%= param_name %></span>
                          <span class="text-sm text-gray-500 bg-white px-2 py-1 rounded border">
                            <%= param_info["type"] || "string" %>
                          </span>
                        </div>
                      <% end %>
                    </div>

                    <details class="group">
                      <summary class="text-sm text-gray-600 cursor-pointer hover:text-gray-800 flex items-center">
                        <svg class="w-3 h-3 mr-1 group-open:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                        View full schema
                      </summary>
                      <div class="mt-2 bg-white rounded p-2 border">
                        <pre class="text-sm text-gray-600 overflow-x-auto"><%= JSON.pretty_generate(schema) %></pre>
                      </div>
                    </details>
                  <% else %>
                    <p class="text-sm text-gray-600">Schema format not recognized</p>
                  <% end %>
                <% rescue JSON::ParserError %>
                  <p class="text-sm text-gray-600">Schema parsing error</p>
                <% end %>
              <% else %>
                <!-- Fallback if no schema available -->
                <div class="space-y-2">
                  <p class="text-sm text-gray-600">Tool Name: <span class="font-medium"><%= tool.name %></span></p>
                  <% if tool.respond_to?(:method_info) && tool.method_info.present? %>
                    <p class="text-sm text-gray-600">Additional Info: <%= tool.method_info %></p>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>

      </div>
    <% else %>
      <!-- No tools available -->
      <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
        <div class="px-6 py-8 text-center">
          <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
          </svg>
          <p class="text-base text-gray-600 mb-2">No tools available</p>
          <p class="text-sm text-gray-500 mb-4">No MCP servers are configured. The chat will work as a regular AI assistant without external tools.</p>
          <%= link_to mcp_servers_path, class: "inline-flex items-center px-4 py-2 bg-claude-blue text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Configure MCP Servers
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Footer Info -->
    <div class="mt-8 bg-gray-50 rounded-lg p-4 border border-gray-200">
      <div class="flex items-center space-x-2 text-base text-gray-600">
        <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span><%= @tools.any? ? "All tools are executed with your explicit permission. Click \"Back to Chat\" to start using these tools in conversation." : "Configure MCP servers to enable external tools and capabilities for enhanced AI assistance." %></span>
      </div>
    </div>

  </div>

</div>
