<!-- Main Container -->
<div class="w-full h-screen flex flex-col bg-chat-bg">

  <!-- Header -->
  <header class="bg-white shadow-sm border-b border-gray-200 px-9 py-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-5">
        <div class="w-12 h-12 gradient-claude rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-lg">M</span>
        </div>
        <h1 class="text-3xl font-semibold text-gray-900">MCP Chat</h1>
      </div>
      <%= link_to '/mcp_chat/toolbox', class: "px-6 py-3 text-base font-medium text-claude-blue hover:text-blue-700 hover:bg-blue-50 rounded-lg transition-colors" do %>
        <svg class="w-6 h-6 inline mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
        </svg>
        View Tools
      <% end %>
    </div>
  </header>

  <!-- Empty State Content -->
  <div class="flex-1 flex flex-col items-center justify-center px-9 py-12">

    <!-- Welcome Section -->
    <div class="text-center max-w-2xl">
      <!-- Main Icon -->
      <div class="w-32 h-32 gradient-claude rounded-3xl flex items-center justify-center mx-auto mb-9 shadow-lg">
        <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
      </div>

      <!-- Welcome Text -->
      <h2 class="text-5xl font-bold text-gray-900 mb-5">Welcome to MCP Chat</h2>
      <p class="text-xl text-gray-600 mb-12 leading-relaxed">An AI assistant with powerful tool integration capabilities. Ask me anything and I'll help you accomplish your tasks.</p>

      <!-- Features Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-9 mb-12">
        <!-- Feature 1 -->
        <div class="bg-white rounded-2xl p-9 border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
          <div class="w-20 h-20 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-claude-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-3 text-lg">Natural Conversation</h3>
          <p class="text-base text-gray-600 leading-relaxed">Chat naturally and get intelligent responses powered by advanced AI.</p>
        </div>

        <!-- Feature 2 -->
        <div class="bg-white rounded-xl p-6 border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
          <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-claude-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Powerful Tools</h3>
          <p class="text-sm text-gray-600">Access external tools and services with your explicit permission.</p>
        </div>

        <!-- Feature 3 -->
        <div class="bg-white rounded-xl p-6 border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Safe & Secure</h3>
          <p class="text-sm text-gray-600">Every tool action requires your explicit approval before execution.</p>
        </div>
      </div>

      <!-- Suggested Prompts -->
      <div class="text-left max-w-xl mx-auto">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Try asking me to:</h3>
        <div class="space-y-3">
          <div class="w-full text-left bg-white border border-gray-200 rounded-lg px-4 py-3 hover:border-claude-blue hover:bg-blue-50 transition-colors group cursor-pointer"
               data-controller="suggested-prompt"
               data-action="click->suggested-prompt#fillPrompt"
               data-suggested-prompt-text-value="Create a blog post about technology trends">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                </svg>
              </div>
              <span class="text-gray-700 group-hover:text-claude-blue">Create a blog post about technology trends</span>
            </div>
          </div>

          <div class="w-full text-left bg-white border border-gray-200 rounded-lg px-4 py-3 hover:border-claude-blue hover:bg-blue-50 transition-colors group cursor-pointer"
               data-controller="suggested-prompt"
               data-action="click->suggested-prompt#fillPrompt"
               data-suggested-prompt-text-value="Analyze data and generate a report">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <span class="text-gray-700 group-hover:text-claude-blue">Analyze data and generate a report</span>
            </div>
          </div>

          <div class="w-full text-left bg-white border border-gray-200 rounded-lg px-4 py-3 hover:border-claude-blue hover:bg-blue-50 transition-colors group cursor-pointer"
               data-controller="suggested-prompt"
               data-action="click->suggested-prompt#fillPrompt"
               data-suggested-prompt-text-value="Help me research and learn about a topic">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <span class="text-gray-700 group-hover:text-claude-blue">Help me research and learn about a topic</span>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

  <!-- Input Area -->
  <div class="bg-white border-t border-gray-200 px-9 py-6">
    <%= form_with url: '/mcp_chat/chat', method: :post, local: true, class: "relative", data: { controller: "shortcut", shortcut_target: "form" } do |form| %>
      <%= form.text_area :prompt, rows: 4, placeholder: "How can I help you today?", class: "w-full px-6 py-5 pr-32 border border-gray-300 rounded-xl resize-none focus:ring-2 focus:ring-claude-blue focus:border-transparent outline-none text-lg leading-relaxed", id: "chat-prompt-input", data: { shortcut_target: "textarea" } %>
      <div class="w-full flex justify-between mt-3">
        <p class="text-sm text-gray-500">Starting new conversation...</p>
        <%= form.submit "Send", class: "px-6 py-3 bg-claude-blue text-white rounded-lg hover:bg-blue-700 transition-colors text-base font-medium", data: { shortcut_target: "submitButton" } %>
      </div>
    <% end %>
  </div>

</div>
