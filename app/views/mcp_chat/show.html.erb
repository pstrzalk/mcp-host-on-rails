<!-- Main Container -->
<div class="w-full h-screen flex flex-col bg-chat-bg">

  <!-- Header -->
  <header class="bg-white shadow-sm border-b border-gray-200 px-9 py-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-5">
        <div class="w-12 h-12 gradient-claude rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-lg">M</span>
        </div>
        <h1 class="text-3xl font-semibold text-gray-900">MCP Chat</h1>
      </div>
      <div class="flex space-x-3">
        <%= link_to '/mcp_chat/toolbox', class: "px-6 py-3 text-base font-medium text-claude-blue hover:text-blue-700 hover:bg-blue-50 rounded-lg transition-colors" do %>
          <svg class="w-6 h-6 inline mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
          </svg>
          View Tools
        <% end %>
        <%= link_to '/mcp_chat/new', class: "px-6 py-3 text-base font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors" do %>
          <svg class="w-6 h-6 inline mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          New Chat
        <% end %>
      </div>
    </div>
  </header>

  <!-- Chat Messages Container -->
  <div class="flex-1 overflow-y-auto px-9 py-9 space-y-9" data-controller="chat" data-action="DOMContentLoaded@document->chat#scrollToBottom">

    <% @mcp_chat.ui_messages.each do |message| %>
      <% case message["role"] %>
      <% when "system" %>
        <!-- System Message -->
        <div class="flex items-start space-x-5">
          <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="flex-1">
            <div class="bg-gray-50 rounded-xl px-6 py-5 border border-gray-200">
              <p class="text-base text-gray-600 font-medium mb-2">System</p>
              <div class="text-gray-700 text-lg leading-relaxed"><%= simple_format message["content"] %></div>
            </div>
          </div>
        </div>

      <% when "user" %>
        <!-- User Message -->
        <div class="flex items-start space-x-5 justify-end">
          <div class="flex-1">
            <div class="bg-user-bg rounded-xl px-6 py-5 border border-blue-200">
              <p class="text-base text-blue-700 font-medium mb-2">You</p>
              <div class="text-gray-900 text-lg leading-relaxed"><%= simple_format message["content"] %></div>
            </div>
          </div>
          <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-white text-base font-medium">U</span>
          </div>
        </div>

      <% when "assistant" %>
        <!-- Assistant Message -->
        <div class="flex items-start space-x-5">
          <div class="w-12 h-12 gradient-claude rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-white text-base font-bold">A</span>
          </div>
          <div class="flex-1">
            <div class="bg-assistant-bg rounded-xl px-6 py-5 border border-gray-200">
              <p class="text-base text-gray-600 font-medium mb-2">Assistant</p>
              <div class="text-gray-900 text-lg leading-relaxed"><%= simple_format message["content"] %></div>
            </div>
          </div>
        </div>

      <% when "tool" %>
        <!-- Tool Execution Result -->
        <div class="flex items-start space-x-3">
          <div class="w-8 h-8 gradient-claude rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-white text-sm font-bold">A</span>
          </div>
          <div class="flex-1">
            <div class="bg-green-50 rounded-lg px-4 py-4 border border-green-200">
              <!-- Header with success indicator -->
              <div class="flex items-center space-x-2 mb-3">
                <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <p class="text-sm text-green-600 font-semibold">Tool Executed Successfully</p>
                <div class="flex-1"></div>
                <% if message["function_name"] %>
                  <span class="text-xs text-gray-500 bg-white px-2 py-1 rounded-full border"><%= message["function_name"] %></span>
                <% end %>
              </div>

              <!-- Tool execution summary -->
              <div class="bg-white rounded-lg border border-green-200 p-4 mb-3">
                <div class="flex items-start space-x-3">
                  <svg class="w-5 h-5 text-green-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <div class="flex-1">
                    <h4 class="font-medium text-gray-900 mb-1">Tool executed</h4>
                    <p class="text-sm text-gray-600 mb-2">
                      <% if message["function_name"] %>
                        Function: <%= message["function_name"] %>
                      <% end %>
                    </p>
                  </div>
                </div>
              </div>

              <!-- Execution details (collapsible) -->
              <% if message["function_arguments"] || message["content"] %>
                <details class="group mb-3">
                  <summary class="text-sm text-green-600 cursor-pointer hover:text-green-700 flex items-center font-medium">
                    <svg class="w-4 h-4 mr-1 group-open:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    View execution details
                  </summary>
                  <div class="mt-3 bg-white rounded-md border border-green-200 p-3">
                    <div class="space-y-3">
                      <% if message["function_arguments"] %>
                        <!-- Call arguments -->
                        <div>
                          <h5 class="text-xs font-semibold text-gray-700 mb-1">Call Arguments:</h5>
                          <pre class="text-xs text-gray-600 bg-gray-50 rounded p-2 overflow-x-auto"><%= JSON.pretty_generate(message["function_arguments"]) rescue message["function_arguments"] %></pre>
                        </div>
                      <% end %>

                      <% if message["content"] %>
                        <!-- Response data -->
                        <div>
                          <h5 class="text-xs font-semibold text-gray-700 mb-1">Tool Response:</h5>
                          <pre class="text-xs text-gray-600 bg-gray-50 rounded p-2 overflow-x-auto"><%= message["content"] %></pre>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </details>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

    <!-- Tool Confirmation Message (Inline) -->
    <% if @mcp_chat.pending_tool_confirmation? %>
      <% tool_call = @mcp_chat.pending_tool_call %>
      <div class="flex items-start space-x-3">
        <div class="w-8 h-8 gradient-claude rounded-full flex items-center justify-center flex-shrink-0">
          <span class="text-white text-sm font-bold">A</span>
        </div>
        <div class="flex-1">
          <div class="bg-confirm-bg rounded-lg px-4 py-4 border-2 border-confirm-border shadow-lg">
            <!-- Header with icon and title -->
            <div class="flex items-center space-x-2 mb-3">
              <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 15.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
              <p class="text-lg font-semibold text-orange-800">Tool Permission Required</p>
            </div>

            <p class="text-gray-700 mb-4">I need your permission to execute the following action:</p>

            <!-- Tool details card -->
            <div class="bg-white rounded-lg border border-orange-200 p-4 mb-4">
              <div class="flex items-center space-x-2 mb-2">
                <svg class="w-4 h-4 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <h3 class="font-semibold text-gray-900"><%= tool_call.dig("function", "name") %></h3>
              </div>

              <p class="text-sm text-gray-600 mb-3">This tool will be executed with the specified parameters.</p>

              <!-- Arguments display -->
              <details class="group">
                <summary class="text-sm text-orange-600 cursor-pointer hover:text-orange-700 flex items-center font-medium">
                  <svg class="w-4 h-4 mr-1 group-open:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                  View call arguments
                </summary>
                <div class="mt-3 bg-gray-50 rounded-md p-3">
                  <pre class="text-xs text-gray-700 whitespace-pre-wrap"><%= JSON.pretty_generate(JSON.parse(tool_call.dig("function", "arguments"))) rescue tool_call.dig("function", "arguments") %></pre>
                </div>
              </details>
            </div>

            <!-- Action buttons -->
            <div class="flex space-x-3">
              <%= form_with url: '/mcp_chat/confirm_tool_yes', method: :post, local: true, class: "flex-1" do |form| %>
                <%= form.submit "Allow", class: "w-full bg-green-600 hover:bg-green-700 text-white font-medium py-3 px-4 rounded-lg transition-colors flex items-center justify-center space-x-2" %>
              <% end %>
              <%= form_with url: '/mcp_chat/confirm_tool_no', method: :post, local: true, class: "flex-1" do |form| %>
                <%= form.submit "Deny", class: "w-full bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-4 rounded-lg transition-colors flex items-center justify-center space-x-2" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>

  <!-- Input Area -->
  <div class="bg-white border-t border-gray-200 px-9 py-6">
    <% if @mcp_chat.pending_tool_confirmation? %>
      <!-- Disabled input during confirmation -->
      <div class="flex space-x-6 opacity-50">
        <div class="flex-1">
          <textarea
            placeholder="Waiting for tool confirmation..."
            class="w-full px-6 py-5 border border-gray-300 rounded-xl resize-none outline-none text-lg"
            rows="4"
            disabled
          ></textarea>
        </div>
        <button class="px-9 py-5 bg-gray-400 text-white rounded-xl flex items-center space-x-3 self-end cursor-not-allowed" disabled>
          <span class="font-medium text-base">Send</span>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
          </svg>
        </button>
      </div>
    <% else %>
      <!-- Active chat input -->
      <%= form_with url: '/mcp_chat/chat', method: :post, local: true, class: "relative", data: { controller: "shortcut", shortcut_target: "form" } do |form| %>
        <%= form.text_area :prompt, rows: 4, placeholder: "Type your message...", class: "w-full px-6 py-5 pr-32 border border-gray-300 rounded-xl resize-none focus:ring-2 focus:ring-claude-blue focus:border-transparent outline-none text-lg leading-relaxed", data: { shortcut_target: "textarea" } %>

        <div class="w-full flex justify-between mt-3">
          <p class="text-sm text-gray-500 py-3">Chat ID: <%= @mcp_chat.mcp_chat_id %></p>
          <%= form.submit "Send", class: "px-6 py-3 bg-claude-blue text-white rounded-lg hover:bg-blue-700 transition-colors text-base font-medium", data: { shortcut_target: "submitButton" } %>
        </div>
      <% end %>
    <% end %>

  </div>

</div>
